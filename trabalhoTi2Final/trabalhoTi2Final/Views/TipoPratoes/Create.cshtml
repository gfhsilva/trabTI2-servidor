@model trabalhoTi2Final.Models.TipoPrato

@{
    ViewBag.Title = "Create";
}

<h2>Adicionar Tipo de Prato</h2>


@using (Html.BeginForm("Create",
                      "tipoPratoes",
                      FormMethod.Post,
                      new { enctype = "multipart/form-data" }
                      )) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  
    <div class="form-group">

 
        <div class="col-md-10">
    <p>Tipo de Prato:</p>  @Html.EditorFor(model => model.Designacao, new { htmlAttributes = new { @class = "form-group row" } })

            @Html.ValidationMessageFor(model => model.Designacao, "", new { @class = "text-danger" })
        </div>
    </div>
    <p>Fotografia do Tipo de Prato:</p>
    <div class="form-group">

          @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.Fotografia, new { htmlAttributes = new { @class = "form-control" } })*@
            @* File Upload *@
            <input type="file"
                   name="fileUploadFotografia"
                   style="color:blue;"
                   accept=".jpg" />
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar Tipo de Prato" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
