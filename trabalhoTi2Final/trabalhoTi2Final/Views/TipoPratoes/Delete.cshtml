@model trabalhoTi2Final.Models.TipoPrato

@{
    ViewBag.Title = "Delete";
}
<div class="alert alert-danger" role="alert">
    Deseja mesmo apagar este Tipo de Prato???
</div>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Designacao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Designacao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>

            <dd>
                <a href="~/images/@Model.Image" target="_blank">
                    <img src="~/images/@Model.Image" height="150" />
                </a>
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <script>
                function ConfirmMessageBox() {
                    var result = confirm("Pretende mesmo apagar este TIPO DE PRATO???");
                    if (result) {
                        return true;
                    } else {
                        return false;
                    }
                }
            </script>
            <div class="alert alert-primary" role="alert">
                <input type="submit" value="APAGAR" class="btn btn-danger" onclick="javascript:return ConfirmMessageBox();" /> |
                @Html.ActionLink("Voltar para a listagem de Tipo de Pratos", "Index")
            </div>
        }
    </div>
