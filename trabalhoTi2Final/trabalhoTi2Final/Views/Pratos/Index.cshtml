@model IEnumerable<trabalhoTi2Final.Models.Pratos>

@{
    ViewBag.Title = "Index";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoPrato.Designacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoPrato.Designacao)
        </td>
        <td>
            @* @Html.DisplayFor(modelItem => item.Image)*@
            <a href="~/images/@item.Image" target="_blank">
                <img src="~/images/@item.Image" width="50" height="37" />
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDPratos }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDPratos }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDPratos })
        </td>
    </tr>
}

</table>
