@model trabalhoTi2Final.Models.Pratos

@{
    ViewBag.Title = "Create";
}




<h2>Create</h2>


@using (Html.BeginForm("Create",
                      "pratos",
                      FormMethod.Post,
                      new { enctype = "multipart/form-data" }
                      ))
{@Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Pratos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })*@
                @* File Upload *@
                <input type="file"
                       name="fileUploadFotografia"
                       style="color:blue;"
                       accept=".jpg" />
            </div>
        </div>

        <div class="form-group" >
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Descricao", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoPratoFK, "TipoPratoFK", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoPratoFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoPratoFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Prato" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
