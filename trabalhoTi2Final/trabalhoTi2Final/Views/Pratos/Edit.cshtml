@model trabalhoTi2Final.Models.Pratos

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@*
    Quando se deseja efetuar o upload de um ficheiro,
    esta instrução é insuficiente
    @using(Html.BeginForm())
    é necessário adicionar-lhe o parâmetro 'enctype = "multipart/form-data" '
*@
@using (Html.BeginForm("Edit",
                      "pratos",
                      FormMethod.Post,
                      new { enctype = "multipart/form-data" }))
{



    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <h4>Pratos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDPratos)

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* Mostrar a imagem associada ao Agente *@
                <a href="~/images/@Model.Image" target="_blank">
                    <img src="~/images/@Model.Image" height="150" />
                </a>
                @* procurar a nova imagem*@
                <input type="file" name="uploadFoto" style="color:blue;" accept=".jpg" />

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Descricao", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoPratoFK, "TipoPratoFK", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoPratoFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoPratoFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Prato" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
