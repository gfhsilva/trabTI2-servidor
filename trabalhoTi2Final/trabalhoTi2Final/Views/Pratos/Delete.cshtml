@model trabalhoTi2Final.Models.Pratos

@{
    ViewBag.Title = "Delete";
}

<div class="alert alert-danger" role="alert">
    Deseja mesmo apagar este Prato???
</div>

    <div>
        <h4>Pratos</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TipoPrato.Designacao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoPrato.Designacao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>

            <dd>
                <a href="~/images/@Model.Image" target="_blank">
                    <img src="~/images/@Model.Image" height="150" />
                </a>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

        </dl>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <script>
                function ConfirmMessageBox() {
                    var result = confirm("Pretende mesmo apagar este PRATO???");
                    if (result) {
                        return true;
                    } else {
                        return false;
                    }
                }
        </script>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="javascript:return ConfirmMessageBox();" /> |
            @Html.ActionLink("Voltar para a listagem de Pratos", "Index")
        </div>
}
    </div>
